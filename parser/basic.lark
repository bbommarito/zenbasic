// ZenBasic Grammar
// A proper BASIC grammar for proper BASIC programs

?start: let_statement

let_statement: "LET"i IDENTIFIER "=" expression

expression: expression "+" term   -> add
          | expression "-" term   -> sub
          | term

term: term "*" factor   -> mul
    | term "/" factor   -> div
    | factor

factor: NUMBER
       | IDENTIFIER

IDENTIFIER: /[A-Z][A-Z0-9_]*[%$]?/
NUMBER: /\d+(\.\d+)?/

%import common.WS
%ignore WS
